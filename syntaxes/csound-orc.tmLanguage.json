{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Csound ORC",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		}

	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.csound-orc",
				"match": "\\b(if|elseif|else|then|endif|goto|kgoto|igoto|while|until|do|od)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.csound-orc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.csound-orc",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.csound.orc"
						}
					},
					"end": "\\*/",
					"name": "comment.block.csound"
				},
				{
					"begin": "(^[ \\t]+)?(?=;|//)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.csound"
						}
					},
					"end": "(?!\\G)",
					"patterns": [
						{
							"begin": ";|//",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.comment.csound"
								}
							},
							"end": "\\n",
							"name": "comment.line.double-slash.csound",
							"patterns": [
								{
									"match": "(?>\\\\\\s*\\n)",
									"name": "punctuation.separator.continuation.csound"
								}
							]
						}
					]
				}
			]
		}
	},
	"scopeName": "source.csound.orc"
}